@model HomePageViewModel

@{
    ViewData["Title"] = "Home";
}

<h1>Wellcome</h1>
<br />
<table>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>
                <a href="home/details/@restaurant.Id">Detail</a>
                @Html.ActionLink("View", "Details", new { id = restaurant.Id })
            </td>
            <td>
                @restaurant.Name
            </td>
        </tr>

    }
</table>

@section footer{
    <h3>@Model.CurrentMessageOfTheDay</h3>
}